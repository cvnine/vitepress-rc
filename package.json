{
    "name": "vitepress-rc",
    "version": "0.0.1",
    "description": "react doc tools base on vitepress",
    "repository": "https://github.com/cvnine/vitepress-rc.git",
    "author": "ihupoo <840499492@qq.com>",
    "license": "MIT",
    "main": "dist/node/index.js",
    "bin": {
        "vitepress-rc": "bin/index.js"
    },
    "scripts": {
        "dev": "run-p dev-client dev-node",
        "dev-client": "tsc -w -p src/client",
        "dev-node": "tsc -w -p src/node",
        "build": "rimraf -rf dist && tsc -p src/client && tsc -p src/node",
        "docs": "run-p dev docs-dev",
        "docs-dev": "node ./bin/index.js dev docs",
        "docs-build": "yarn build && node ./bin/index build docs",
        "docs-serve": "node ./bin/index serve docs",
        "lint": "prettier --write ./src/**/* && eslint --fix"
    },
    "engines": {
        "node": ">=12.0.0"
    },
    "keywords": [
        "vite",
        "react",
        "doc"
    ],
    "lint-staged": {
        "**/*.(js|jsx|ts|tsx)": [
            "prettier --write ./src/**/*",
            "eslint --fix",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "devDependencies": {
        "@types/es-module-lexer": "^0.3.0",
        "@types/fs-extra": "^9.0.8",
        "@types/hast": "^2.3.1",
        "@types/mdast": "^3.0.3",
        "@types/minimist": "^1.2.1",
        "@types/node": "^14.14.35",
        "@types/react": "^17.0.3",
        "@types/react-dom": "^17.0.2",
        "@types/react-router-dom": "^5.1.7",
        "@types/styled-components": "^5.1.9",
        "eslint-config-cv": "^0.1.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "husky": "^5.2.0",
        "lint-staged": "^10.5.4",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.2.1",
        "rimraf": "^3.0.2",
        "rollup": "^2.45.2",
        "typescript": "^4.2.3"
    },
    "dependencies": {
        "@mdx-js/mdx": "^2.0.0-next.9",
        "@mdx-js/react": "^2.0.0-next.9",
        "@vitejs/plugin-react-refresh": "^1.3.1",
        "chalk": "^4.1.0",
        "chokidar": "^3.5.1",
        "compression": "^1.7.4",
        "copy-text-to-clipboard": "^3.0.1",
        "diacritics": "^1.3.0",
        "esbuild": "^0.9.6",
        "escape-html": "^1.0.3",
        "fs-extra": "^9.1.0",
        "globby": "^11.0.3",
        "hast-util-is-element": "^1.1.0",
        "mdast-util-from-markdown": "^0.8.5",
        "mdast-util-mdx": "^0.1.1",
        "micromark-extension-mdxjs": "^0.3.0",
        "minimist": "^1.2.5",
        "ora": "^5.4.0",
        "polka": "^0.5.2",
        "prism-react-renderer": "^1.2.0",
        "react": "^17.0.1",
        "react-docgen-typescript": "^1.21.0",
        "react-dom": "^17.0.1",
        "react-simple-code-editor": "^0.11.0",
        "remark-emoji": "^2.1.0",
        "remark-frontmatter": "^3.0.0",
        "remark-gfm": "^1.0.0",
        "remark-parse-yaml": "^0.0.3",
        "remark-slug": "^6.0.0",
        "sirv": "^1.0.11",
        "slash": "^3.0.0",
        "styled-components": "^5.2.1",
        "unified": "^9.2.1",
        "unist-util-find": "^1.0.2",
        "unist-util-visit": "^2.0.3",
        "vite": "^2.1.2"
    }
}
